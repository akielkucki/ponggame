<Window x:Class="PongGame.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:PongGame"
        mc:Ignorable="d"
        Title="StartWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <MediaElement Source="/videoplayback.webm" LoadedBehavior="Play" Stretch="UniformToFill" IsMuted="True"/>
        </Grid>
        <Grid Background="Black" Opacity="0.7">
            <TextBlock Text="Pong Game" FontSize="36" FontWeight="Bold"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button Content="Start Game" FontSize="24" FontWeight="Bold"
                    HorizontalAlignment="Center" VerticalAlignment="Bottom"
                    Margin="0 0 0 100" Click="StartButton_Click"/>
            <Button Content="Settings" FontSize="24" FontWeight="Bold"
                    HorizontalAlignment="Center" VerticalAlignment="Bottom"
                    Margin="0 0 0 50" Click="SettingsButton_Click"/>
        </Grid>
    </Grid>
</Window>
